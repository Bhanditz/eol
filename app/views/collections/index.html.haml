%h1=I18n.t("listing_collections")
%table
  %tr
    %th=I18n.t("name")
    %th=I18n.t("community")
    %th=I18n.t("user")
    %th=I18n.t("special_collection")
    %th=I18n.t("public")
    %th=I18n.t("object_type")
    %th=I18n.t("object")
  - @collections.each do |collection|
    %tr
      %td= h collection.name
      %td= h collection.community_id
      %td= h collection.user_id
      %td= h collection.special_collection_id
      %td= h collection.public
      %td= h collection.object_type
      %td= h collection.object_id
      %td= link_to I18n.t("show"), collection
      %td= link_to I18n.t("edit"), edit_collection_path(collection)
      %td= link_to I18n.t("destroy"), collection, :confirm => I18n.t("are_you_sure"), :method => :delete
%br/
= link_to I18n.t("new_collection"), new_collection_path
