- content_for :social_sharing do
  = render :partial => 'shared/social_sharing'
- editable = @collection.editable_by?(current_user)
= content_for :additional_page_actions do
  = render :partial => 'collections/editable_actions', :locals => { :editable => editable }
#tabs_sidebar
  = render :partial => 'collections/filter_by_item_type'
#sidebar
  .inat_top_contributors
    %h3= t('.top_contributors')
    = javascript_include_tag "http://www.inaturalist.org/projects/#{@inaturalist_project_id}/contributors.widget"
  = render :partial => 'collections/recently_visited'
#inat_observations.main_container
  .inat_observations_header
    = link_to t('.add_observations'), "http://www.inaturalist.org/observations/new?project_id=#{@inaturalist_project_id}", :class => 'button'
    %span= t('.taxa_observed', :observed_taxa_count => @inaturalist_observed_taxa_count)
    %a{:href => "http://www.inaturalist.org/"}
      %img{:src => "http://inaturalist.org/images/logo-small.gif"}
  .inat_observations_map
    %iframe{:src => "http://maps.google.com/?q=http://www.inaturalist.org/observations/project/#{@inaturalist_project_id}.kml&t=p&output=embed", :frameborder => "0", 
            :height => "300", :marginheight => "0", :marginwidth => "0", :scrolling => "no", :width => "500"}
  .heading
    %h3= t('.recent_observations')
  %ul.object_list
    - for observation in @inaturalist_project_observations
      %li
        %a{:href => "http://www.inaturalist.org/observations/#{observation['id']}"}
          %img{:src => observation['photos'][0]['square_url']}
        - species = observation['species_guess'].blank? ? t('.some_taxon') : observation['species_guess']
        %h4= link_to species, "http://www.inaturalist.org/observations/#{observation['id']}"
        - observer_link = link_to observation['user_login'], "http://www.inaturalist.org/observations/#{observation['user_login']}"
        .small= t('.observer_with_link', :observer_link => observer_link)
        .small= t('.observation_date', :observed_on => observation['observed_on_string'])
        = t('.observation_place', :place => observation['place_guess'])
  %br
  %h3= link_to t('.view_more_observations_on_inaturalist', :project_title => @inaturalist_project_title), "http://www.inaturalist.org/observations/project/#{@inaturalist_project_id}"
