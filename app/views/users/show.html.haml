#profile_info.main_container
  - unless @user.bio.blank?
    .article
      .header
        %h3= I18n.t(:users_about_me_header)
      .copy
        %p= allow_some_html @user.bio
  .section.half
    .article
      .header
        %h3= I18n.t(:users_my_info_header)
      %dl.info
        %dt= I18n.t('activerecord.attributes.user.full_name')
        %dd= h @user.full_name
        %dt= I18n.t('activerecord.attributes.user.username')
        %dd= h @user.username
        - unless @user.user_identities.blank?
          %dt= I18n.t('helpers.label.user.user_identities')
          %dd= @user.user_identities.collect{|ui| ui.label}.join(', ')
        
        - if @user.curator_level  
          %dt= I18n.t('activerecord.attributes.user.curator_level')
          %dd= @user.curator_level.label

  .section.half

    - if @user.is_curator?
      .article
        .header
          %h3= I18n.t(:users_curation_header)
        %dl
          %dt= I18n.t('activerecord.attributes.user.credentials')
          %dd= @user.credentials
          %dt= I18n.t('activerecord.attributes.user.curator_scope')
          %dd= h @user.curator_scope
    
    .article
      .header
        %h3= I18n.t(:user_activity_stats_header)
      
      = I18n.t(:user_activity_click_on_the_numbers)
      = '<br><br>'
      
      %dl.activity
        - if @user.is_curator?

          - if !@user.assistant_curator?
            %dt= I18n.t(:user_activity_stats_objects_curated)
            %dd= link_to User.total_objects_curated_by_action_and_user(nil, @user.id), user_activity_path(@user, :filter => "data_object_curation")

          %dt= I18n.t(:user_activity_stats_taxa_curated)
          %dd= @user.total_species_curated
          %dt= I18n.t(:user_activity_stats_articles_added)
          %dd= link_to @user_submitted_text_count, user_activity_path(@user, :filter => "added_data_objects")
          %dt= I18n.t(:user_activity_stats_set_exemplar)
          %dd= link_to User.total_objects_curated_by_action_and_user(Activity.choose_exemplar.id, @user.id), user_activity_path(@user, :filter => "data_object_curation")
          <br>
          %dt= I18n.t(:user_activity_stats_common_names_added)
          %dd= link_to @common_names_added, user_activity_path(@user, :filter => "names")
          %dt= I18n.t(:user_activity_stats_common_names_curated)
          %dd= link_to @common_names_curated, user_activity_path(@user, :filter => "names")

          - if @user.total_wikipedia_nominated > 0
            %dt= I18n.t(:user_activity_stats_wikipedia_nominated)
            %dd= @user.total_wikipedia_nominated
          = '<br>'
          
        %dt= I18n.t(:user_activity_stats_taxa_commented)
        %dd= link_to @user.taxa_commented.length, user_activity_path(@user, :filter => "taxa_comments")
        %dt= I18n.t(:user_activity_stats_comment_submitted)
        %dd= link_to @user.total_comment_submitted, user_activity_path(@user, :filter => "comments")

