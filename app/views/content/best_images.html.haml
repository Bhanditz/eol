#content
  #page-separator-general
  #page-title
    %h1
      = @title
    %hr
  #page-content.clearfix
    #full-page-content
      %h3
        = @date_generated
      - if !@text_to_write.empty?
        - for dato in @text_to_write
          %img{ :border=>0, :src=>"#{dato.thumb_or_object}" }
          %br
          %br
      - else
        =I18n.t("no_images_for_this_taxon")
