.error
  %p{:style => 'padding-bottom:2em;'}
    =  I18n.t(:general_error_occurred) 
    - if defined? Community && current_user.is_admin? and defined?(message)
      %p{:style => 'padding:1em 0;'}
        = I18n.t(:you_are_an_admin_so_i_will_show_you_that_the_error_was) 
      %code{:style => 'style:block;padding:2em;'}
        = message
  - unless defined?(supress_try_again_link)
    %p
      = link_to I18n.t(:try_your_request_again) , '#', {:onclick=>'javascript:window.location.reload();'}
