#page-separator-general
#page-title
  %h1
    = "Media Contact"[]
  %hr
#page-content.clearfix
  #full-page-content
    = eol_lang_error_messages_for :contact
    %br
    %span#verification_warn.error
      %strong
        = @verification_did_not_match
    - form_for :contact, @contact,:html=>{:class=>"warning-warn invalid-invalid styleLabelOnErr"} do |f|
      %label{ :for => "contact_name", :title => "Your name (first and last) "[:your_name] }
        = "Your name (first and last)"[:your_name]
        %span{ :title => "required" }
          *
        %span.warn
          = "(" + "Required"[] + ")"
      = f.text_field :name, :size=>'50', :maxlength=>'250'
      %span#name_warn.error
      %label{ :for => "contact_email", :title => "Your email address"[] }
        = "Your email address"[]
        %span{ :title => "required" }
          *
        %span.warn
          = "(" + "Required"[] + ")"
      = f.text_field :email, :size=>'50', :maxlength=>'250'
      %label{ :for => "contact_comments", :title => "Comments"[] }
        = "Comments"[]
        %span{ :title => "required" }
          *
        %span.warn
          = "(" + "Required"[] + ")"
      = f.text_area :comments
      %span#comments_warn.error
      %br
      %label{ :title => "For verification, please enter the characters you see below.  Click the ? for assistance."[:recaptcha] }
        = "For verification, please enter the characters you see below.  Click the ? for assistance."[:recaptcha]
      = recaptcha_tags
      %br
      = submit_tag "Contact Us"[]