:javascript
  function select_contact_subject(form_value) {
    contact_subject_id = $(form_value).val();
    if (', #{$CONTRIBUTE_INQUIRY_CONTACT_SUBJECT_IDS},'.indexOf(',' + contact_subject_id + ',') == -1) {
      $('#taxon_group').hide();
    } else {
      $('#taxon_group').show();
    }
  }

#page-separator-general
#page-title
  %h1
    = "Contact Us"[]
  %hr
#page-content.clearfix
  #full-page-content
    For comments about the project in general, please
    = link_to 'visit the Forum','http://forum.eol.org', :target=>:new
    \. You can help us by
    = link_to 'suggesting or voting on features', :action=>'feedback'
    - unless logged_in?
      (register with EOL to track your suggestions)
    \. To contact a specific individual on the EOL project, please see the list of
    =link_to 'Component Leads', :action=>'page', :id=>'contact_eol'
    \. For other needs, please use the form below.
                
    = eol_lang_error_messages_for :contact
    %br
    %span#verification_warn.error
      %strong
        = @verification_did_not_match
                        
    - form_for :contact, @contact, :html=>{:class=>"warning-warn invalid-invalid styleLabelOnErr"} do |f|
      %label{:for => "contact_name", :title => "Your name (first and last)"[:your_name]}
        = "Your name (first and last)"[:your_name]
        %span{ :title => "required" }
          *
        %span.warn
          = "(" + "Required"[] + ")"
      = f.text_field :name, :size=>'50', :maxlength=>'250'
      %span#name_warn.error
      %label{ :for => "contact_email", :title => "Your email address"[] }
        = "Your email address"[]
      = f.text_field :email, :size=>'50', :maxlength=>'250'
      %label{ :title => "Topic area"[] }
        = "Topic area"[]
        %span{ :title => "required" }
          *
        %span.warn
          = "(" + "Required"[] + ")"
      = f.collection_select :contact_subject_id, @subjects, :id, :title, { :prompt => true }, {:onchange=>'javascript:select_contact_subject(this);'}
      %span#subject_warn.error
      %span.taxon_group{ :style => "display:none;" }
        %label{ :for => "contact_taxon_group", :title => "Taxon group of interest"[] }
          = "Taxon group of interest"[]
        = f.text_field :taxon_group
      %label{ :for => "contact_comments", :title => "Comments"[] }
        = "Comments"[]
        %span{ :title => "required" }
          *
        %span.warn
          = "(" + "Required"[] + ")"
      = f.text_area :comments
      %span#comments_warn.error
      - if $ENABLE_RECAPTCHA
        %br
        %label{ :for => "recaptcha", :title => "For verification, please enter the characters you see below.  Click the ? for assistance."[:recaptcha] }
          = "For verification, please enter the characters you see below.  Click the ? for assistance."[:recaptcha]
        = recaptcha_tags
      %br
      = submit_tag "Contact Us"[]
      %br
      %br
      = "To sign up for EOL notifications, please {create_account}"[:sign_up_for_eol_notifications,link_to("create an account"[:create_account], register_url)]
