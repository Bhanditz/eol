-# NOTE / TODO - I couldn't get case statements using note.class to work; using note.class.name, however, works.
- content_for :title do
  -# Grrr.  This is a lot of ugly code just to get a "nice" title... but it is /is/ nice, when there's only one note:
  - if @notes.length == 1
    - note = @notes.first
    - who = note.user.full_name
    - case note.class.name
      - when 'Comment'
        - if note.parent == @user
          = I18n.t('notifier.recent_activity.comment_title_your_newsfeed', :who => who)
        - else
          = t("notifier.recent_activity.comment_title", :who => who, :what => note.parent.summary_name)
      - else
        = t("notifier.recent_activity.#{note.class.name.underscore}_title", :who => who)
  - else
    = t("notifier.default_subject")
%h1{:style => 'font-weight: normal;'}= I18n.t(:greeting_dear_name_with_comma, :name => @user.full_name, :scope => :notifier)
- @notes.each do |note|
  %hr{:style => "border: none; border-bottom: 1px solid #d2d9df;"}
  - case note.class.name
  - when 'Comment'
    = render(:partial => 'recent_activity_mailer/recent_activity/comment', :locals => { :who => note.user.full_name, :what => note.parent.summary_name, :body => note.body, :comment_link => link_to_item(Kernel.const_get(note.parent_type).find(note.parent_id), :host => $EMAIL_HOST) })
  - when 'CollectionActivityLog'
    -# = render(:partial => 'recent_activity_mailer/recent_activity/collection_activity_log', :locals => { :note => note })
    = render(:partial => 'activity_logs/collection_activity_log', :locals => { :item => note })
  - when 'CommunityActivityLog'
    -# = render(:partial => 'recent_activity_mailer/recent_activity/community_activity_log', :locals => { :note => note })
    = render(:partial => 'activity_logs/community_activity_log', :locals => { :note => note })
  - when 'CuratorActivityLog'
    -# = render(:partial => 'recent_activity_mailer/recent_activity/curator_activity_log', :locals => { :note => note })
    = render(:partial => 'activity_logs/curator_activity_log', :locals => { :note => note })
  - when 'DataObject'
    -# = render(:partial => 'recent_activity_mailer/recent_activity/data_object', :locals => { :note => note })
    = render(:partial => 'activity_logs/users_data_object_log', :locals => { :note => note })
  - else
    - logger.warn("!! WARNING: Skipped an email note to #{@user.username} having a #{note.class.name} (##{note.id})... the rest was sent")
