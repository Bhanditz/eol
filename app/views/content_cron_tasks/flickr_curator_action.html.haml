- # I'm not using views well here because I don't want HAML to add newlines anywhere
- case curator_activity_log.action_with_object
- when ActionWithObject.trusted
  - action_text = I18n.t("has_trusted_your_image")
- when ActionWithObject.untrusted
  - action_text = I18n.t("has_untrusted_your_image")
- when ActionWithObject.inappropriate
  - action_text = I18n.t("has_hidden_your_image")
- else
  - action_text = I18n.t("has_curated_your_image")
- profile_link = url_for(:controller => :account, :action => :show, :id => curator_activity_log.user.id, :only_path => false)
- data_object_link = url_for(:controller => :data_objects, :action => curator_activity_log.data_object.id, :only_path => false)
- comment = curator_activity_log.comment.nil? ? "" : ":\n#{curator_activity_log.comment.body}"
= I18n.t(:eol_curator_activity_email_message, :profile_url => profile_link, :curator_full_name => curator_activity_log.user.full_name, :action => action_text, :data_object_url => data_object_link, :comment => comment)
