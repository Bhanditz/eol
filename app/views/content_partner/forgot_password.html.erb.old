<div id="page-separator-general"></div>

<!-- page title -->
<div id="page-title">
    <h1><%= "Forgot Password"[] %></h1>
    <hr />

</div>
<!-- /page title -->
<div id="page-content" class="clearfix">
    <!-- center page content -->
    <div id="full-page-content">
        <br />
        <p><%= "Enter the username OR project name you registered with to retrieve your password:"[] %></p>

        <% form_tag url_for(:action => 'forgot_password') do -%>
            <label for="username"><%= "Username"[] %>: 
            <%= text_field_tag 'username', nil, :maxlength => 25,:id => 'username' %>
            <br /><br />
            OR 
            <br /><br />
            <label for="email"><%= "Project Name"[] %>: 
            <%= text_field_tag 'project_name', nil,:maxlength => 100, :id => 'project_name' %>

            <br />
            <div class="button">
                <%= submit_tag 'Submit'[:submit] + ' &#187;' %>
            </div>
            <br />
            <%= link_to 'Cancel'[:cancel], :action=>'login'%>
            
        <% end -%>

    </div>
</div>
