- link_style ||= nil
- display_curator ||= false
- user = link_to(h(item.user.full_name), user_url(item.user), :style => link_style)
- if display_curator && item.user.is_curator?
  - user = I18n.t(:user_full_name_with_curator, :user => user, :curator_level => item.user.curator_level.translated_label)
%p= raw I18n.t("activity_user_created_data", :user => user,
  :object_name => link_to(item.predicate_label, taxon_data_url(item.taxon_concept, :anchor => item.predicate), :style => link_style),
  :taxon_concept => link_to(raw(item.taxon_concept.summary_name), taxon_data_url(item.taxon_concept),
  :style => link_style))
%blockquote{:cite => h(item.user.full_name)}
  %p
    = "Its"
    = display_uri(item.predicate)
    = "is"
    = display_uri(item.object)
