#news
  - form_tag({:action=>'index'},:method=>'get') do
    =I18n.t("search_for_items_containing_")
    = text_field_tag(:term_search_string,@term_search_string)
    = submit_tag I18n.t("search")
    %br
    = link_to I18n.t("add_a_new_news_item"),:action=>'new'
    %br
    %br
    - if @news_items.nil? == false && @news_items.size > 0
      =I18n.t("a_total_of")
      = @news_items_count
      =I18n.t("items_were_found_matching_your")
      %br
      = will_paginate @news_items
      %table.results_table{ :cellspacing => "0" }
        %tr
          %th
            =I18n.t("publish_after__utc_")
          %th
            =I18n.t("news_date")
          %th
            =I18n.t("news_item_")
          %th
            =I18n.t("action")
        - for news_item in @news_items
          - column_class=cycle('odd','even')
          %tr
            %td{ :class => column_class }
              = h format_date_time(news_item.activated_on,:format=>'short_no_tz')
              %br
              = h "(PUBLISHED)" if news_item.visible?
            %td{ :class => column_class }
              = h format_date(news_item.display_date)
            %td{ :class => column_class }
              = news_item.summary
            %td{ :class => column_class }
              = link_to I18n.t("_edit_"),:action=>'edit',:id=>news_item.id
              %br
              = link_to I18n.t("_delete_"), {:action=>'destroy',:id=>news_item.id}, :confirm => I18n.t("this_cannot_be_undone__are_you"), :method => :delete
      %br
      = will_paginate @news_items
    - else
      =I18n.t("no_news_items_are_available_ma")
