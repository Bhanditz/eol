<script language="JavaScript">
  function get_page_content(form_value) {
    page_id=form_value.options[form_value.selectedIndex].value;
    new Ajax.Request('/administrator/content_page/get_page_content/'+ page_id, 
    {asynchronous:true, 
      evalScripts:true, 
      onComplete:function(request){hideAjaxIndicator();}, 
      onLoading:function(request){showAjaxIndicator();}
      });
    return false;
    }
</script>
<br />
<% if @content_section.name != 'Home Page' %>
	<%=link_to("Add a new page to this section",:action=>'create', :id=>@content_section_id)%> or
<% end %>
select an existing page to work with:
<%= collection_select(:content_pages,:id,@content_pages,:id,:title_with_language,{:prompt=>'--select page to work with--'},{:onChange=>'JavaScript:get_page_content(this);'})%>
