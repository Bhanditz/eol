-# playing remote videos

- if File.extname(@data_object.video_url) == ".flv"
  %embed{:src => "/flvplayer.swf", :pluginspage => "http://www.macromedia.com/go/getflashplayer",
         :type => "application/x-shockwave-flash", :height => "355",
         :flashvars => "file=#{@data_object.video_url}&displayheight=355&usefullscreen=false&autostart=true&usecaptions=false",
         :width => "450"}
- else
  %object{:data => @data_object.video_url, :type => "application/x-shockwave-flash", :height => "355", :width => "450"}
    %param{:name => "flashvars", :value => "flickr_show_info_box=true"}
    %param{:name => "wmode", :value => "transparent"}
    %param{:name => "movie", :value => @data_object.video_url}
    %param{:name => "bgcolor", :value => "#000000"}
    %param{:name => "allowFullScreen", :value => "true"}
    %embed{:src => @data_object.video_url, :allowfullscreen => "true",
           :type => "application/x-shockwave-flash",
           :height => "355",
           :flashvars => "flickr_show_info_box=true",
           :bgcolor => "#000000",
           :width => "450"}
