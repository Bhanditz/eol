.visibility.curation-section
  .label.credit-caption
    = "Visibility"[]
  .options.action-value
    .option
      = radio_button_tag "visibility_id", Visibility.visible.id.to_s, data_object.visible?, { :data_href => url_for(:action => :show, :data_object_id => data_object['id']), :id => ("#{data_object['id']}_visibility_id_" + Visibility.visible.id.to_s) }
      %label{:for => "#{data_object['id']}_visibility_id_" + Visibility.visible.id.to_s} Show to all users
    .option
      = radio_button_tag "visibility_id", Visibility.invisible.id.to_s, data_object.invisible?, { :data_href => url_for(:action => :hide, :data_object_id => data_object['id']), :id => ("#{data_object['id']}_visibility_id_" + Visibility.invisible.id.to_s) }
      %label{:for => "#{data_object['id']}_visibility_id_" + Visibility.invisible.id.to_s} Hide for all except curators
    .option
      = radio_button_tag "visibility_id", Visibility.inappropriate.id.to_s, data_object.inappropriate?, { :data_href => url_for(:action => :remove, :data_object_id => data_object['id']), :id => ("#{data_object['id']}_visibility_id_" + Visibility.inappropriate.id.to_s) }
      %label{:for => "#{data_object['id']}_visibility_id_" + Visibility.inappropriate.id.to_s} Permanently Remove      
.vetted.curation-section
  .label.credit-caption
    = "Vetted"[]
  .options.action-value
    .option.unreviewed
      = radio_button_tag "vetted_id", Vetted.unknown.id.to_s, data_object.unknown?, { :data_href => url_for(:action => :unreviewed, :data_object_id => data_object['id'], :div_id => "#{data_object['id']}_vetted_id_#{Vetted.unknown.id.to_s}"), :id => ("#{data_object['id']}_vetted_id_" + Vetted.unknown.id.to_s) }
      %label{:for => "#{data_object['id']}_vetted_id_" + Vetted.unknown.id.to_s} Unreviewed
    .option.trust
      = radio_button_tag "vetted_id", Vetted.trusted.id.to_s, data_object.trusted?, { :data_href => url_for(:action => :trust, :data_object_id => data_object['id'], :div_id => "#{data_object['id']}_vetted_id_#{Vetted.trusted.id.to_s}"), :id => ("#{data_object['id']}_vetted_id_" + Vetted.trusted.id.to_s) }
      %label{:for => "#{data_object['id']}_vetted_id_"  + Vetted.trusted.id.to_s} Trusted
    .option.untrust
      = radio_button_tag "vetted_id", Vetted.untrusted.id.to_s, data_object.untrusted?, { :id => ("#{data_object['id']}_vetted_id_" + Vetted.untrusted.id.to_s) }
      %label{:for => "#{data_object['id']}_vetted_id_" + Vetted.untrusted.id.to_s} Untrusted
      - div_style = data_object.untrusted? ? '' :  'display:none;'
      .reason{ :style => div_style, :id => "reason_#{data_object.id}" }
        / = "Please select a reason, and optionally leave a curation comment to explain your decision:"
        %b Please select a reason, and/or optionally leave a curation comment:
        .option
          = check_box_tag 'untrust_reasons[]', UntrustReason.misidentified.id.to_s, data_object.untrust_reasons_include?(UntrustReason.misidentified), {:id => "#{data_object['id']}_untrust_reason_misidentified", :class => "untrust_reason"}
          %label{ :for => "#{data_object['id']}_untrust_reason_misidentified"} Misidentified
        .option
          = check_box_tag 'untrust_reasons[]', UntrustReason.incorrect.id.to_s, data_object.untrust_reasons_include?(UntrustReason.incorrect), {:id => "#{data_object['id']}_untrust_reason_incorrect", :class => "untrust_reason"}
          %label{ :for => "#{data_object['id']}_untrust_reason_incorrect"} Incorrect/misleading information
        .option
          = check_box_tag 'untrust_reasons[]', UntrustReason.poor.id.to_s, data_object.untrust_reasons_include?(UntrustReason.poor), {:id => "#{data_object['id']}_untrust_reason_poor", :class => "untrust_reason"}
          %label{ :for => "#{data_object['id']}_untrust_reason_poor"} Poor writing/image/sound quality
        .option
          = check_box_tag 'untrust_reasons[]', UntrustReason.duplicate.id.to_s, data_object.untrust_reasons_include?(UntrustReason.duplicate), {:id => "#{data_object['id']}_untrust_reason_duplicate", :class => "untrust_reason"}
          %label{ :for => "#{data_object['id']}_untrust_reason_duplicate"} Redundant/duplicate
        .option
          = check_box_tag 'untrust_reasons[]', UntrustReason.other.id.to_s, data_object.untrust_reasons_include?(UntrustReason.other), {:id => "#{data_object['id']}_untrust_reason_other", :class => "untrust_reason"}
          %label{ :for => "#{data_object['id']}_untrust_reason_other"} Other
        %input{ :type => "hidden", :id => "#{data_object['id']}_untrust_reasons_comment", :class => "untrust_reasons_comment", :name => "untrust_reasons_comment" }
.curation-section
  .label.credit-caption
    = "Curation Comment"[]
  .options.action-value
    .comment
      = text_area_tag 'comment', nil, :class => 'curation-comment-box', :id => "#{data_object['id']}_curator_comment"
