%div{ :class => "attribution #{data_object.id}" }
  - if data_object.map?
    %table{ :cellspacing => "0", :width => "100%", :cellpadding => "0" }
      %tr.credit-line
        %td
          .credit-caption
            = "Legend"[]
        %td
          .credit-value
            = image_tag 'gbif_legend.gif', :title=>'GBIF Map Legend',:alt=>'GBIF Map Legend'
            %br
            Not all maps have occurrence information.
  - else !@preview
    - if !:skip_permalink
      %a.attribution-icon.expand-text-attribution{ :href => "#", :title => "View full attribution details", :id => "tdo_#{data_object.id}", :style => "width: 25px; height: 25px" }
  - unless data_object.users_data_objects.blank? || data_object.users_data_objects[0].user.blank?
    .credit.supplier
      .credit-caption
        = "Supplier"[]
      .credit-value
        = data_object.users_data_objects[0].user.given_name
        = data_object.users_data_objects[0].user.family_name
      .footer
  - citables = data_object.citable_entities
  - unless citables.blank?
    - citables.each do |citable|
      %div{ :class => "credit #{citable.type.gsub(/ /,'').strip.downcase}" }
        .credit-caption
          = citable.type
        .credit-value
          = citables_to_string(citable)
          = citables_to_icons(citable)
        .footer
  - if data_object.in_wikipedia?
    .credit.show
      .credit-caption
        EDIT
      .credit-value
        - edit_link = EOLWebService.uri_remove_param(data_object.source_url, 'oldid') + "&action=edit"
        = external_link_to("latest version of this article in Wikipedia", edit_link)
      .footer
    - if @taxon_concept && @taxon_concept.show_curator_controls?
      - if data_object.visibility_id == Visibility.preview.id
        - form_tag "/pages/#{@taxon_concept.id}/publish_wikipedia_article", :method => :put, :id => 'wikipedia_publish_form', :class => 'wikipedia_publish_form' do
          = hidden_field_tag "data_object_id", data_object.id
          = hidden_field_tag "category_id", params[:category_id]
          .credit.show
            .credit-caption
              PUBLISH
            .credit-value
              %a{:href=>'', :onclick =>"javascript:$('#wikipedia_publish_form').submit(); return false;"}
                trust this article and replace current version
            .footer
      .credit.show
        .credit-caption
          RECOMMEND
        .credit-value
          = link_to "nominate another wikipedia article for ingestion", :controller => 'content', :action => 'page', :id => 'curator_central', :anchor => 'wikipedia'
        .footer
  - if (data_object.text? || data_object.image? || data_object.video?) && ! (defined?(skip_permalink) && skip_permalink)
    .credit.permalink
      .credit-caption
        = "Permalink"[]
      .credit-value
        = "Copy and paste in email or document"[]
        \:
        %br
        %form
          %input{ :size => data_object.text? ? '45' : '35', :type => "text", :value => "http://#{$SITE_DOMAIN_OR_IP}/data_objects/#{data_object.id}", :onclick => "this.select();" }
      .footer
