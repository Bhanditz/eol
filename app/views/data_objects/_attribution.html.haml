%div{ :class => "attribution #{data_object.id}" }
  - if data_object.map?
    %table{ :cellspacing => "0", :width => "100%", :cellpadding => "0" }
      %tr.credit-line
        %td
          .credit-caption
            = "Legend"[]
        %td
          .credit-value
            = image_tag 'gbif_legend.gif', :title=>'GBIF Map Legend',:alt=>'GBIF Map Legend'
            %br
            Not all maps have occurrence information.
  - elsif has_hidden_attributions?(data_object) && !@preview
    %a.attribution-icon.expand-text-attribution{ :href => "#", :title => "View full attribution details", :id => "tdo_#{data_object.id}", :style => "width: 25px; height: 25px" }
  - unless data_object['users'].nil?
    .credit.supplier
      .credit-caption
        Supplier
      .credit-value
        = data_object['users'][0].given_name
        = data_object['users'][0].family_name
      .footer
  - unless data_object['attributions'].nil?
    - data_object['attributions'].each do |attribution|
      %div{ :class => "credit #{css_class(attribution.agent_role)}" }
        .credit-caption
          = attribution.agent_role
        .credit-value         
          / agent partial
          = agent_partial(attribution.agent)
          / agent icon
          = agent_icons_partial(attribution.agent)
        .footer
  - if data_object.in_wikipedia?
    .credit.show
      .credit-caption
        EDIT
      .credit-value
        - edit_link = EOLWebService.uri_remove_param(data_object.source_url, 'oldid') + "&action=edit"
        = external_link_to("latest version of this article in Wikipedia", edit_link)
      .footer
    - if @taxon_concept.show_curator_controls?
      - if data_object.visibility_id == Visibility.preview.id
        - form_tag "/pages/#{@taxon_concept.id}/publish_wikipedia_article", :method => :put, :id => 'wikipedia_publish_form', :class => 'wikipedia_publish_form' do
          = hidden_field_tag "data_object_id", data_object.id
          = hidden_field_tag "category_id", params[:category_id]
          .credit.show
            .credit-caption
              PUBLISH
            .credit-value
              %a{:href=>'', :onclick =>"$('wikipedia_publish_form').submit(); return false;"}
                trust this article and replace current version
            .footer
      .credit.show
        .credit-caption
          RECOMMEND
        .credit-value
          = link_to "nominate another wikipedia article for ingestion", :controller => 'content', :action => 'page', :id => 'curator_central', :anchor => 'wikipedia'
        .footer
  - if (data_object.text? || data_object.image?) && !data_object['taxa_names_ids'].nil?
    .credit.permalink
      .credit-caption
        = "Permalink"[]
      .credit-value
        = "Copy and paste in email or document"[]
        \:
        %br
        %form
          -# Note that we don't just use @taxon_concept.id for this link because higher-level taxa pages (ie: Animals) should point to a more appropriate page for the image (ie: Raccoons).
          %input{ :size => data_object.text? ? '45' : '35', :type => "text", :value => "http://#{$SITE_DOMAIN_OR_IP}/pages/#{data_object.taxon_page_id_for_permalink}?#{data_object['media_type'].downcase}_id=#{DataObject.latest_published_version_of(data_object.id).id}", :onclick => "this.select();" }
      .footer
