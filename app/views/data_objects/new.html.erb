<span id="missing_text_error" class="error" style="display:none;">
  A Description must be entered.
</div>

<% form_for(@data_object) do |f| %>
  <input type="hidden" name="taxon_concept_id" value="<%= @taxon_concept_id %>" />
  <table>
    <tr>
      <td width="25%">
        <label for="data_object_TOC category">Toc category</label>
      </td>
      <td>
        <%= select("data_objects_toc_category", "toc_id", @selectable_toc) %>
      </td>
    </tr>

    <tr>
      <td><%= f.label 'Title (optional)' %></td>
      <td><%= f.text_field( :object_title )%> </td>
    </tr>

    <tr>
      <td><%= f.label :description %></td>
      <td><%= f.text_area( :description, :size => "33x8" )%> </td>
    </tr>

    <tr>
      <td><%= f.label :language_id %></td>
      <td>
        <%= select("data_object", "language_id", @languages) %>
      </td>
    </tr>

    <tr>
      <td><%= f.label :license_id %></td>
      <td>
        <%= select("data_object", "license_id", @licenses) %>
      </td>
    </tr>

    <tr>
      <td><label>NOTE</label></td>
      <td>
        After submitting your text entry it will appear as an untrusted entry.
        To view your entry, make sure you Information slider is set to All. Your
        entry will appear with a yellow (untrusted) background until a curator
        marks it as trusted.
      </td>
    </tr>

    <tr>
      <td colspan="2">
        <input id="preview_text" type="button" value="Preview"/>&nbsp;<input type="submit" value="Confirm"/>
      </td>
    </tr>
  </table>
<% end %>