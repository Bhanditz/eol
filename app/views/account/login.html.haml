:javascript
  $(document).ready(function() {
  $('user_username').focus();
  });
#page-separator-general
#page-title
  %h1= "Login"[:login]
  %hr
#page-content.clearfix
  / center page content
  #full-page-content
    %div{ :style => "float: left; width: 550px;" }
      - form_for :user, :url => {:action => 'authenticate'} do |form|
        %fieldset
          %label{ :for => "user_username" }
            == #{"Username or Email Address"[]}:
          = form.text_field 'username', :size => '16',:maxlength => '30'
          %br
          %br
          %label{ :for => "user_password" }
            == #{"Password"[]}:
          = form.password_field 'password', :size => '16',:maxlength=>'30'
          &nbsp;&nbsp;
          = link_to("Forgot password?"[], :action => 'forgot_password')
          %br
          %br
          %label{ :for => "remember_me" }= "Remember Me"[]
          = check_box_tag 'remember_me'
          = "check to stay logged in automatically for up to two weeks (do NOT use on public computers)"[:remember_me_message]
          %br
          %br
          %table{ :border => "0", :width => "500", :cellpadding => "20" }
            %tr
              %td{ :valign => "top" }
                = submit_tag 'Login Now'[:login_now] + ' &#187;'
              %td{ :valign => "middle" }
                = link_to("If you don't have an account, click here to register"[:click_here_to_register],:action=>'signup')
