	<div id="page-separator-general"></div>

    <!-- page title -->
    <div id="page-title">
        <h1><%= "Forgot Password"[] %></h1>
        <hr />

    </div>
    <!-- /page title -->
    <div id="page-content" class="clearfix">
        <!-- center page content -->
        <div id="full-page-content">
            <br />
 

                <p><%= "Enter the email address OR username (or both) you registered with to retrieve your password"[:forgot_password_message] %>:</p>
                <% form_for :user do |form| -%>
                <fieldset>

                    <label for="user_email"><%= "Email Address"[] %>: </label>
                    <%= form.text_field 'email',:size=>50,:maxlength=>250 %> 
                    <br /><br />
                    OR 
                    <br /><br />
                    <label for="user_name"><%= "Username"[] %>: </label>
                    <%= form.text_field 'username',:size=>30,:maxlength=>30 %>
					
                    <br /><br />
               
                        <table border="0" width="500" cellpadding="20">
                          <tr>
                          			<td valign="top"> <%= submit_tag 'Submit'[:submit] + ' &#187;' %></td>
              						      <td valign="middle"><%= link_to 'Cancel'[:cancel], :action=>'login'%></td>
              					</tr>
              				</table>
                      
    
                </fieldset>
                <% end -%>


        </div>
    </div>
