%a.tooltip{:id => element_id, :href => "#", :onclick => "return false;"}
  = term + image_tag('/images/magnifier.png')
%script{ :type => "text/javascript" }
  = "$('##{element_id}').qtip({"
  = "content: '#{definition.gsub("'","\'")}',"
  position: {
  corner: {
  target: 'bottomMiddle',
  tooltip: 'topMiddle'
  }
  },
  style: { 
  padding: 5,
  background: '#EDFFD5',
  color: 'black',
  textAlign: 'center',
  border: {
  width: 4,
  radius: 3,
  color: '#A2D959'
  },
  tip: 'topMiddle',
  },
  show: 'mouseover',
  hide: 'mouseout'
  })
