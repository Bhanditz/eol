%div#hierarchy_browser
  %ul#hierarchy_browser_list.branch
    - unless @hierarchy_entry.nil?
      %table
        %tr
          %td{ :width => '50%', :valign => 'top' }
            %b
              Browsing Branch:
            - ancestors = @hierarchy_entry.ancestors(:include_stats => true)
            - hierarchy_entry = ancestors.pop
            = render(:partial => 'navigation/node_with_ancestry_stats', :locals => { :ancestors => ancestors, :hierarchy_entry => hierarchy_entry })
            %br
            %b
              Hierarchy Roots:
            - for kingdom in @hierarchy.kingdoms
              %li.node.bold
                = render(:partial => 'navigation/node_name_stats', :locals => { :hierarchy_entry => kingdom, :node_class => 'bold' })
          %td{ :width => '50%', :valign => 'top' }
            %table.results_table.stats
              %tr
                %th
                  Stat
                %th
                  Value
              %tr
                %td.odd
                  \# of taxa at this entry
                %td.odd.stats
                  = hierarchy_entry.hierarchy_entry_stat.total_children
              %tr
                %td.even
                  \# of trusted images at this entry
                %td.even.stats
                  = hierarchy_entry.hierarchy_entry_stat.all_image_trusted
              %tr
                %td.odd
                  \# of unreviewed images at this entry
                %td.odd.stats
                  = hierarchy_entry.hierarchy_entry_stat.all_image_untrusted
              %tr
                %td.even
                  \% of children with images
                %td.even.stats
                  = hierarchy_entry.hierarchy_entry_stat.pecent_with_images
                  \%
              %tr
                %td.odd
                  \# of trusted text objects at this entry
                %td.odd.stats
                  = hierarchy_entry.hierarchy_entry_stat.all_text_trusted
              %tr
                %td.even
                  \# of unreviewed text objects at this entry
                %td.even.stats
                  = hierarchy_entry.hierarchy_entry_stat.all_text_untrusted
              %tr
                %td.odd
                  \% of children with text
                %td.odd.stats
                  = hierarchy_entry.hierarchy_entry_stat.pecent_with_text
                  \%
            %br
            - metric = @hierarchy_entry.taxon_concept.taxon_concept_metric
            = render(:partial => '/administrator/stats/taxon_metrics', :locals => { :metric => metric })