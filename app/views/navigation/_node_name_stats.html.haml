- node_class ||= ''
%a.name{:href => '', :class => node_class, :onclick => "javascript:update_browser_stats(#{entry['id']}, 0); return false;"}
  = entry['name_string']
= link_to(external_link_icon, { :controller => '/taxa', :action => 'show', :id => entry['taxon_concept_id']}, :target => '_blank' )
- if entry['descendants'] > 0 && entry['descendants'] > 5000
  = image_tag('arrow_down_gray.gif', :alt => 'cannot expand children', :title => 'cannot expand children')
-elsif entry['descendants'] > 0
  %a{:href => '', :onclick => "javascript:update_browser_stats(#{entry['id']}, 1); return false;"}
    = image_tag('arrow_down.gif', :alt => 'expand all children', :title => 'expand all children')
- unless entry['stats'].blank?
  %small
    = entry['stats'].pecent_with_images
    \%
    = image_tag('image.png', :alt => 'percentage of descendants with images', :title => 'percentage of descendants with images')
    &nbsp;&nbsp;
    = entry['stats'].pecent_with_text
    \%
    = image_tag('text.png', :alt => 'percentage of descendants with text', :title => 'percentage of descendants with text')
