  <li>
    <% if act_history.data_object_type == "Text" -%>
    <!-- text_description -->
      <p> <%= act_history.data_object_type.capitalize -%> 
       for "<%= act_history.toc_label -%>" 
       on "<a href="<%= url_for(:controller=>'/taxa', :action=>'show',
             :id=>act_history.taxon_id) -%>" 
             target="_blank"><%= act_history.taxon_name -%></a>"
       was changed to 
       "<%= current_act -%>"   
       by 
       <%= curator_or_plain_username(act_history.user) %>
       <%= act_date -%> ago 
     </p>
    <% elsif act_history.data_object_type == "Image" -%>
    <!-- image -->
    <p> <%= act_history.data_object_type.capitalize -%> 
      on "<a href="<%= url_for(:controller=>'/taxa', :action=>'show',
            :id=>act_history.taxon_id) -%>" 
            target="_blank"><%= act_history.taxon_name -%></a>"
      was changed to 
      "<%= current_act -%>"   

      by 
      <%= curator_or_plain_username(act_history.user) %>
      <%= act_date -%> ago 
      <br/>
      <%= image_tag act_history.data_object.smart_thumb, 
       :alt => hh(act_history.taxon_name)  -%>
    </p>
    <% end -%>
  </li>
