= render :partial => 'menu'
#content_partners.main_container
  .copy
    %h2= I18n.t(:admin_statistics_curator_header)
  - form_tag({}, :method => :get) do
    %fieldset.actions.download
      = submit_tag I18n.t(:admin_content_partners_statistics_first_published_download_csv_submit),
        :name => :commit_download_csv
      %input{:type => 'checkbox', :name => 'all_records'}
      %input{:type => 'hidden', :name => 'report', :value => 'curators'}
      = I18n.t('all_title')
      %input{:type => 'hidden', :name => 'page', :value => params[:page]}
= will_paginate @stats, :previous_label => I18n.t(:pagination_previous), :next_label => I18n.t(:pagination_next)
%table.standard
  %caption
  %thead
    %tr
      %th= I18n.t('activerecord.attributes.eol_statistic.curators')
      %th= I18n.t('activerecord.attributes.eol_statistic.curators_assistant')
      %th= I18n.t('activerecord.attributes.eol_statistic.curators_full')
      %th= I18n.t('activerecord.attributes.eol_statistic.curators_master')
      %th= I18n.t('activerecord.attributes.eol_statistic.active_curators')
      %th= I18n.t('activerecord.attributes.eol_statistic.pages_curated_by_active_curators')
      %th= I18n.t('activerecord.attributes.eol_statistic.objects_curated_in_the_last_30_days')
      %th= I18n.t('activerecord.attributes.eol_statistic.curator_actions_in_the_last_30_days')
      %th= I18n.t('created_at')
  %tbody
    - @stats.each do |s|
      %tr
        %td{:align => 'right'}= number_with_delimiter(s.curators)
        %td{:align => 'right'}= number_with_delimiter(s.curators_assistant)
        %td{:align => 'right'}= number_with_delimiter(s.curators_full)
        %td{:align => 'right'}= number_with_delimiter(s.curators_master)
        %td{:align => 'right'}= number_with_delimiter(s.active_curators)
        %td{:align => 'right'}= number_with_delimiter(s.pages_curated_by_active_curators)
        %td{:align => 'right'}= number_with_delimiter(s.objects_curated_in_the_last_30_days)
        %td{:align => 'right'}= number_with_delimiter(s.curator_actions_in_the_last_30_days)
        %td{:align => 'right'}= s.created_at.strftime("%Y-%m-%d")
= will_paginate @stats, :previous_label => I18n.t(:pagination_previous), :next_label => I18n.t(:pagination_next)
