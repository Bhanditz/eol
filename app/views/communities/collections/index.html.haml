#sidebar
  = render :partial => 'communities/active_members_sidebar'
#collections_tab.main_container
  .heading
    %h3= I18n.t(:community_focus)
  %ul.object_list
    = render :partial => 'collections/collection_summary', :locals => { :collection => @community.focus }
  - if @community_collections.empty?
    .heading
      %h3= I18n.t(:endorsed_collections_with_count, :count => 0)
  - else
    .heading
      %h3= I18n.t(:endorsed_collections_with_count, :count => @community_collections.size)
      = render :partial => 'shared/sort_by_date_form'
    %ul.object_list
      - @community_collections.each do |ci|
        = render :partial => 'collections/collection_summary', :locals => { :collection => ci.object, :show_user => true, :annotation => ci.annotation }
