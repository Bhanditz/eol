= render(:partial=>'uservoice')
- url = url_for(:controller => '/api', :action => 'provider_hierarchies', :version => '1.0', :only_path => false)
#content
  #page-separator-general
  #page-title
    %h1
      EOL API: Provider Hierarchies
    %hr
  #page-content.clearfix
    #full-page-content
      = render(:partial=>'jump_to_nav')
      %h3
        Request
      %p.indent
        %a{ :href => url }
          = url
      %h3
        Parameters
      %p.indent
        %i
          none
      %h3
        Description
      %p.indent
        This method will return references to all hierarchies supplied by EOL Content Partners. The response will include the label of the hierarchy and the EOL unique ID representing the hierarchy
      %h3
        XML Response
      .formatted_code<
        :escaped
          <?xml version="1.0" encoding="UTF-8" standalone="yes"?>
          <results>
