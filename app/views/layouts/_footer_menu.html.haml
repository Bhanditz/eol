- menu_items.each do |menu_item|
  = link_to menu_item.title[menu_item.key], (menu_item.url.blank? ? "/content/page/" + menu_item.page_url : menu_item.url), :title=>menu_item.title[menu_item.key], :target=>(menu_item.open_in_new_window ? "_blank" : "_self")
