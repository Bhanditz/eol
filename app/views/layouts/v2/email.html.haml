!!!
%html{ "xml:lang" => "en", :lang => "en", :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    %title
      = yield :title
  %body{ :bgcolor => "#e2e9ef", :style => "margin: 20px; font: 12px/160% Arial, sans-serif; color: #394651;" }
    %table{ :cellspacing => "0", :height => "100%", :cellpadding => "0", :width => "100%" }
      %tr
        %td{ :width => '600px', :align => "center", :valign => "middle"}
          %table{ :cellspacing => "0", :cellpadding => '20', :height => "100%", :width => "500px", :style => "border: 1px solid #394651" }
            %tr
              %td{ :style => 'background: #394651; text-align: center;'}
                = image_tag("http://www.eol.org/images/v2/logo.png", :alt => "", :style => "border: none;")
            %tr
              %td{:align => "left", :style => "color: #3f4b56; background: #fff;"}
                = yield
            %tr
              %td{ :valign => 'baseline', :style => 'border-top: 1px solid #e2e9ef; padding: 20px 30px; background: #fff;'}
                - link_to image_tag("http://eol.org/images/v2/logo_footer.png", :alt => "", :style => "border: none; float: right;"), root_url(:host => $EMAIL_HOST), :style => 'text-decoration: none;'
                
