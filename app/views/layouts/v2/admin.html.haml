- content_for :head do
  = stylesheet_include_i18n_merged 'admin_pack', :media => "all"
- content_for :main do
  #page_heading{:class => display_admins_navigation? ? 'with_nav' : nil}
    .site_column
      .hgroup
        - @page_title ||= page_title
        %h1= @page_title
        - unless @page_subheader.blank?
          %h2= raw(@page_subheader)
        - unless @page_description.blank?
          %p= @page_description
      = render :partial => 'shared/flash_messages'
      - if display_admins_navigation?
        %ul.nav
          %li{:class => resource_is_active('index')}= link_to I18n.t(:admin_link), admin_path
          %li{:class => resource_is_active('contentpages')}= link_to I18n.t(:admin_content_pages_link), admin_content_pages_path
          %li{:class => resource_is_active('contentpartners')}= link_to I18n.t(:admin_content_partners_link), admin_content_partners_path
          %li{:class => resource_is_active('eolstatistics')}= link_to I18n.t(:admin_statistics_link), statistics_path
          %li{:class => resource_is_active('newsitem')}= link_to I18n.t(:admin_news_link), admin_news_items_path

  #content{:class => controller_name}
    .site_column
      = yield

= render :file => 'layouts/v2/application'
