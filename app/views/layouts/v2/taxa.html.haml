- content_for :main do
  = render :partial => 'taxa/classification_selector' unless @selected_hierarchy_entry.blank?
  #page_heading.with_nav
    .site_column
      .hgroup
        %h1.scientific_name
          = raw @scientific_name
          - unless @assistive_section_header.blank?
            %span.assistive= " &mdash; #{@assistive_section_header}"
        - unless @preferred_common_name.blank?
          %h2{:title => I18n.t(:preferred_common_name_advisory_information)}
            = hh(@preferred_common_name)
            %small= link_to I18n.t(:learn_more_about_names_for_this_taxon),
              @selected_hierarchy_entry ? taxon_entry_names_path(@taxon_concept, @selected_hierarchy_entry.id) : taxon_names_path(@taxon_concept)
        - else
          .copy
            %p= link_to I18n.t(:learn_more_about_names_for_this_taxon),
              @selected_hierarchy_entry ? taxon_entry_names_path(@taxon_concept, @selected_hierarchy_entry.id) : taxon_names_path(@taxon_concept)
        = yield :social_sharing
      .page_actions
        %ul
          %li
            = render :partial => 'shared/add_to_my_collection', :locals => { :item => @taxon_concept, :my_collection => @watch_collection }
          - if current_user.min_curator_level?(:master)
            - unless @selected_hierarchy_entry || @taxon_concept.classifications_locked?
              %li= link_to(I18n.t(:reindex_page_button), taxon_reindexing_url(@taxon_concept), :method => :post, :class => "button reindex")
          - if current_page?(:controller => 'taxa/details', :action => 'index') || @add_article_toc_id || @add_link_type_id
            %li
              = link_to I18n.t(:add_link_to_page_button), new_taxon_data_object_path(@taxon_concept, :link => true), :class => 'button link_button'
              = link_to I18n.t(:add_article_to_page_button), new_taxon_data_object_path(@taxon_concept, :toc => @add_article_toc_id), :class => 'button'

      = render :partial => 'shared/flash_messages'

      - if @selected_hierarchy_entry
        %p#citation.status
          = render :partial => 'shared/hierarchy_citation'

      %ul.nav
        -# NOTE the "if" and, below, the "else". If you're having trouble, you may have edited one and not the other!
        - if @selected_hierarchy_entry
          %li{:class => resource_is_active('overview')}= link_to raw(I18n.t(:overview)), overview_taxon_entry_path(@taxon_concept, @selected_hierarchy_entry)
          %li{:class => resource_is_active('details')}= link_to raw(I18n.t(:detail)), taxon_entry_details_path(@taxon_concept, @selected_hierarchy_entry)
          %li{:class => resource_is_active('media')}= link_to raw(I18n.t(:media_with_count, :count => @taxon_concept.media_count(current_user, @selected_hierarchy_entry))), taxon_entry_media_path(@taxon_concept, @selected_hierarchy_entry)
          %li{:class => resource_is_active('maps')}= link_to raw(I18n.t(:maps_with_count, :count => @taxon_concept.maps_count)), taxon_entry_maps_path(@taxon_concept, @selected_hierarchy_entry)
          %li{:class => resource_is_active('names')}= link_to raw(I18n.t(:names)), taxon_entry_names_path(@taxon_concept, @selected_hierarchy_entry)
          %li{:class => resource_is_active('communities')}= link_to raw(I18n.t(:community)), taxon_entry_communities_path(@taxon_concept, @selected_hierarchy_entry)
          %li{:class => resource_is_active('resources')}= link_to raw(I18n.t(:resources)), taxon_entry_resources_path(@taxon_concept, @selected_hierarchy_entry)
          %li{:class => resource_is_active('literature')}= link_to raw(I18n.t(:literature)), taxon_entry_literature_path(@taxon_concept, @selected_hierarchy_entry)
          %li{:class => resource_is_active('updates')}= link_to raw(I18n.t(:updates)), taxon_entry_updates_path(@taxon_concept, @selected_hierarchy_entry)
        - else
          -# NOTE the two blocks, above and below, here.  Lots of duplication.  Change both, due to subtle diffs.
          %li{:class => resource_is_active('overview')}= link_to raw(I18n.t(:overview)), overview_taxon_path(@taxon_concept), :class => 'pjax'
          %li{:class => resource_is_active('details')}= link_to raw(I18n.t(:detail)), taxon_details_path(@taxon_concept), :class => 'pjax'
          %li{:class => resource_is_active('media')}= link_to raw(I18n.t(:media_with_count, :count => @taxon_concept.media_count(current_user))), taxon_media_path(@taxon_concept)
          %li{:class => resource_is_active('maps')}= link_to raw(I18n.t(:maps_with_count, :count => @taxon_concept.maps_count)), taxon_maps_path(@taxon_concept)
          %li{:class => resource_is_active('names')}= link_to raw(I18n.t(:names)), taxon_names_path(@taxon_concept)
          %li{:class => resource_is_active('communities')}= link_to raw(I18n.t(:community)), taxon_communities_path(@taxon_concept)
          %li{:class => resource_is_active('resources')}= link_to raw(I18n.t(:resources)), taxon_resources_path(@taxon_concept)
          %li{:class => resource_is_active('literature')}= link_to raw(I18n.t(:literature)), taxon_literature_path(@taxon_concept.id)
          %li{:class => resource_is_active('updates')}= link_to raw(I18n.t(:updates)), taxon_updates_path(@taxon_concept.id)
        -# NOTE that this one is NOT nested under the if/else:
        %li{:class => resource_is_active('worklist')}= link_to raw(I18n.t(:worklist)), taxon_worklist_path(@taxon_concept) if current_user.min_curator_level?(:full)

  #content
    .site_column
      = yield
      .disclaimer.copy
        %h3.assistive= I18n.t(:taxon_page_content_disclaimer_header)
        %p= I18n.t(:taxon_page_content_disclaimer)
        %p= I18n.t(:taxon_page_content_disclaimer_suggest_improvement)
= render :file => 'layouts/v2/application'
