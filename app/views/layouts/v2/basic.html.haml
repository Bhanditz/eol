- content_for :main do
  - if @home_page
    = render :partial => 'shared/flash_messages'
  - else
    #page_heading
      .site_column
        .hgroup
          = render :partial => 'content/breadcrumbs'
          %h1= @page_title
          - unless @page_subtitle.blank?
            %h2= @page_subtitle
          = yield :social_sharing
          - unless @page_description.blank?
            %p= @page_description
        = render :partial => 'shared/flash_messages'
  = yield
= render :file => 'layouts/v2/application'