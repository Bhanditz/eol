- content_for :main do
  - if @home_page
    = render :partial => 'shared/flash_messages'
  - else
    #page_heading
      .site_column
        .hgroup
          %h1= @page_title
          %h2= @page_subtitle unless @page_subtitle.blank?
          %p= @page_description unless @page_description.blank?
        = render :partial => 'shared/flash_messages'
  = yield
= render :file => 'layouts/v2/application'