var $row = $('tr#<%= @user_added_data.anchor %>');
// $row.find('th.exemplar').removeClass('exemplar')
// $row.find('th.excluded').removeClass('excluded');
var $add_cmd = $row.addClass('hidden').next().find('div.additional_commands');
// $add_cmd.find('a.remove_exemplar').hide();
$add_cmd.find('a.add_exemplar').hide();
var $unhide = $add_cmd.find('a.unhide.button');
if($unhide.length > 0) {
  $unhide.show();
} else {
  $add_cmd.append("<%= escape_javascript link_to(I18n.t(:data_row_unhide_button), user_added_datum_unhide_path(@user_added_data), method: :put, class: 'unhide button', remote: true) %>");
}
$add_cmd.find('a.hide.button').hide();
