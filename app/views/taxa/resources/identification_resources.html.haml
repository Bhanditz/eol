= content_for :head do
  = javascript_include_tag "taxonomy"
#content
  #taxon_resources.site_column
    = render :partial => 'menu'
    #taxon_detail
      #main.main_container
        %h3= I18n.t(:taxon_identification_resources_header)
        .section
          - unless @contents.blank?
            = render :partial => 'taxa/details/category_content', :locals => { :content => @contents }
          - else
            .article
              .empty
                %p= I18n.t(:taxon_identification_resources_empty)
                %p= link_to I18n.t(:add_identification_resources_to_page_link_button), new_taxon_data_object_path(@taxon_concept, :toc => TocItem.identification_resources.id), :class => 'button'
