- content_for :social_sharing do
  = render :partial => 'shared/social_sharing'
#taxon_resources
  = render :partial => 'menu'
  #taxon_detail
    #main.main_container
      %h3= I18n.t(:taxon_citizen_science_header)
      .section
        - unless @contents.blank?
          = render :partial => 'taxa/details/category_content', :locals => { :content => @contents }
        - else
          .empty
            - toc = TocItem.cached_find_translated(:label, 'Citizen Science links', 'en')
            - toc_id = toc ? toc.id : nil
            %p= I18n.t(:taxon_citizen_science_resources_empty)
            %p= link_to I18n.t(:add_citizen_science_resources_to_page_link_button), new_taxon_data_object_path(@taxon_concept, :toc => toc_id), :class => 'button'
