#tabs_sidebar
  %ul.tabs
    - if @selected_hierarchy_entry
      %li{:class => resource_is_active('taxa/resources', 'show')}
        = link_to I18n.t(:taxon_partner_links_link), taxon_hierarchy_entry_resources_path(@taxon_concept, @selected_hierarchy_entry)
      %li{:class => resource_is_active('taxa/resources', 'education')}
        = link_to I18n.t(:taxon_education_link), education_taxon_hierarchy_entry_resources_path(@taxon_concept, @selected_hierarchy_entry)
        - if Resource.ligercat.nil?
          Hello
      %li{:class => resource_is_active('taxa/resources', 'citizen_science')}
        = link_to I18n.t(:taxon_citizen_science_link), citizen_science_taxon_hierarchy_entry_resources_path(@taxon_concept, @selected_hierarchy_entry)
      - if !Resource.ligercat.nil? && HierarchyEntry.find_by_hierarchy_id_and_taxon_concept_id(Resource.ligercat.hierarchy.id, @taxon_concept.id)
        %li{:class => resource_is_active('taxa/resources', 'biomedical_terms')}
          = link_to I18n.t(:taxon_biomedical_terms_link), biomedical_terms_taxon_hierarchy_entry_resources_path(@taxon_concept, @selected_hierarchy_entry)
      %li{:class => resource_is_active('taxa/resources', 'identification_resources')}
        = link_to I18n.t(:taxon_identification_resources_link), identification_resources_taxon_hierarchy_entry_resources_path(@taxon_concept, @selected_hierarchy_entry)
      - unless @taxon_concept.nucleotide_sequences_hierarchy_entry_for_taxon.blank?
        %li{:class => resource_is_active('taxa/resources', 'nucleotide_sequences')}
          = link_to I18n.t(:taxon_nucleotide_sequences_link), nucleotide_sequences_taxon_hierarchy_entry_resources_path(@taxon_concept, @selected_hierarchy_entry)
      - unless @news_and_event_links_contents.blank?
        %li{:class => resource_is_active('taxa/resources', 'news_and_event_links')}
          = link_to I18n.t(:taxon_news_and_event_links_link), news_and_event_links_taxon_hierarchy_entry_resources_path(@taxon_concept)
      - unless @related_organizations_contents.blank?
        %li{:class => resource_is_active('taxa/resources', 'related_organizations')}
          = link_to I18n.t(:taxon_related_organizations_link), related_organizations_taxon_hierarchy_entry_resources_path(@taxon_concept)
      - unless @multimedia_links_contents.blank?
        %li{:class => resource_is_active('taxa/resources', 'multimedia_links')}
          = link_to I18n.t(:taxon_multimedia_links_link), multimedia_links_taxon_hierarchy_entry_resources_path(@taxon_concept)
    - else
      %li{:class => resource_is_active('taxa/resources', 'show')}
        = link_to I18n.t(:taxon_partner_links_link), taxon_resources_path(@taxon_concept)
      %li{:class => resource_is_active('taxa/resources', 'education')}
        = link_to I18n.t(:taxon_education_link), education_taxon_resources_path(@taxon_concept)
      %li{:class => resource_is_active('taxa/resources', 'citizen_science')}
        = link_to I18n.t(:taxon_citizen_science_link), citizen_science_taxon_resources_path(@taxon_concept)
      - if Resource.ligercat && HierarchyEntry.find_by_hierarchy_id_and_taxon_concept_id(Resource.ligercat.hierarchy.id, @taxon_concept.id)
        %li{:class => resource_is_active('taxa/resources', 'biomedical_terms')}
          = link_to I18n.t(:taxon_biomedical_terms_link), biomedical_terms_taxon_resources_path(@taxon_concept)
      %li{:class => resource_is_active('taxa/resources', 'identification_resources')}
        = link_to I18n.t(:taxon_identification_resources_link), identification_resources_taxon_resources_path(@taxon_concept)
      - unless @taxon_concept.nucleotide_sequences_hierarchy_entry_for_taxon.blank?
        %li{:class => resource_is_active('taxa/resources', 'nucleotide_sequences')}
          = link_to I18n.t(:taxon_nucleotide_sequences_link), nucleotide_sequences_taxon_resources_path(@taxon_concept)
      - unless @news_and_event_links_contents.blank?
        %li{:class => resource_is_active('taxa/resources', 'news_and_event_links')}
          = link_to I18n.t(:taxon_news_and_event_links_link), news_and_event_links_taxon_resources_path(@taxon_concept)
      - unless @related_organizations_contents.blank?
        %li{:class => resource_is_active('taxa/resources', 'related_organizations')}
          = link_to I18n.t(:taxon_related_organizations_link), related_organizations_taxon_resources_path(@taxon_concept)
      - unless @multimedia_links_contents.blank?
        %li{:class => resource_is_active('taxa/resources', 'multimedia_links')}
          = link_to I18n.t(:taxon_multimedia_links_link), multimedia_links_taxon_resources_path(@taxon_concept)
