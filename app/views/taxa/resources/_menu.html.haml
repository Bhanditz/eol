#tabs_sidebar
  %ul.tabs
    - if @selected_hierarchy_entry
      %li{:class => resource_is_active('taxa/resources', 'show')}
        = link_to I18n.t(:taxon_partner_links_link), taxon_entry_resources_path(@taxon_concept, @selected_hierarchy_entry)
      %li{:class => resource_is_active('taxa/resources', 'education')}
        = link_to I18n.t(:taxon_education_link), education_taxon_entry_resources_path(@taxon_concept, @selected_hierarchy_entry)
        - if Resource.ligercat.nil?
          Hello
      %li{:class => resource_is_active('taxa/resources', 'citizen_science')}
        = link_to I18n.t(:taxon_citizen_science_link), citizen_science_taxon_entry_resources_path(@taxon_concept, @selected_hierarchy_entry)
      - if !Resource.ligercat.nil? && HierarchyEntry.find_by_hierarchy_id_and_taxon_concept_id(Resource.ligercat.hierarchy.id, @taxon_concept.id)
        %li{:class => resource_is_active('taxa/resources', 'biomedical_terms')}
          = link_to I18n.t(:taxon_biomedical_terms_link), biomedical_terms_taxon_entry_resources_path(@taxon_concept, @selected_hierarchy_entry)
      %li{:class => resource_is_active('taxa/resources', 'identification_resources')}
        = link_to I18n.t(:taxon_identification_resources_link), identification_resources_taxon_entry_resources_path(@taxon_concept, @selected_hierarchy_entry)
      - unless @taxon_concept.nucleotide_sequences_hierarchy_entry_for_taxon.blank?
        %li{:class => resource_is_active('taxa/resources', 'nucleotide_sequences')}
          = link_to I18n.t(:taxon_nucleotide_sequences_link), nucleotide_sequences_taxon_entry_resources_path(@taxon_concept, @selected_hierarchy_entry)
    - else
      %li{:class => resource_is_active('taxa/resources', 'show')}
        = link_to I18n.t(:taxon_partner_links_link), taxon_resource_path(@taxon_concept)
      %li{:class => resource_is_active('taxa/resources', 'education')}
        = link_to I18n.t(:taxon_education_link), education_taxon_resource_path(@taxon_concept)
      %li{:class => resource_is_active('taxa/resources', 'citizen_science')}
        = link_to I18n.t(:taxon_citizen_science_link), citizen_science_taxon_resource_path(@taxon_concept)
      - if Resource.ligercat && HierarchyEntry.find_by_hierarchy_id_and_taxon_concept_id(Resource.ligercat.hierarchy.id, @taxon_concept.id)
        %li{:class => resource_is_active('taxa/resources', 'biomedical_terms')}
          = link_to I18n.t(:taxon_biomedical_terms_link), biomedical_terms_taxon_resource_path(@taxon_concept)
      %li{:class => resource_is_active('taxa/resources', 'identification_resources')}
        = link_to I18n.t(:taxon_identification_resources_link), identification_resources_taxon_resource_path(@taxon_concept)
      - unless @taxon_concept.nucleotide_sequences_hierarchy_entry_for_taxon.blank?
        %li{:class => resource_is_active('taxa/resources', 'nucleotide_sequences')}
          = link_to I18n.t(:taxon_nucleotide_sequences_link), nucleotide_sequences_taxon_resource_path(@taxon_concept)

