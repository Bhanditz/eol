#content
  #taxon_literature.site_column
    = render :partial => 'literature_menu'
    .main_container.copy
      - unless @references.blank?
        .article
          %p
            = I18n.t(:the_following_bibliography)
      %h2= I18n.t(:literature_header)
      - if @references.blank?
        %p= I18n.t(:literature_empty)
      - else
        %ul
          - @references.each do |r|
            %li= r.full_reference
