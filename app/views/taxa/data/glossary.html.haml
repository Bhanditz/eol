- content_for :social_sharing do
  = render partial: 'shared/social_sharing'
-# TODO - These should actually be links to filtered versions of this page, for accessibility.
- include_other_category = !@data_point_uris.empty? && (@data_point_uris.detect{ |d| d.predicate_known_uri.nil? || d.predicate_known_uri.toc_items.blank? })
#tabs_sidebar.data
  %ul.tabs.with_icons
    - @categories.each do |cat|
      %li= link_to cat.label, taxon_data_path(@taxon_data, toc_id: cat.id)
    - if include_other_category
      %li= link_to I18n.t(:other_category), taxon_data_path(@taxon_data, toc_id: 'other')
    %li= link_to I18n.t(:all_categories), taxon_data_path(@taxon_data)
    %li.glossary{ class: 'active' }= link_to I18n.t(:data_subtab_glossary), glossary_taxon_data_path(@taxon_page)
    %li.about= link_to I18n.t(:data_subtab_about), about_taxon_data_path(@taxon_page)
.main_container#taxon_data
  = render partial: 'glossary'
