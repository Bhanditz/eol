    %table.results_table{:cellspacing => "0", :summary => "Links"}
      %tbody
        %tr
          %th
            = "Project"[]
          %th
            = "Search"[]
          - if show_both
            %th= "by Scientific Name"[]
        %tr
          %td.odd{:height => "60", :width => "100"}
            = external_link_to(image_tag('agent_icons/google.gif'), 'http://www.google.com/search?q=' + blind_outlink_parameter, :show_link_icon => false)
