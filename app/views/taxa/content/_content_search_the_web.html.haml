- blind_outlink_parameter = URI.encode(sanitize(strip_tags(@taxon_concept.entry.name.canonical_form.string)))
- blind_outlink_parameter_scientific = URI.encode(sanitize(strip_tags(@taxon_concept.scientific_name)))
- show_both=(blind_outlink_parameter == blind_outlink_parameter_scientific ? false : true)
