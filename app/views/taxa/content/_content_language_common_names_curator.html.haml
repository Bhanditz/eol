- form_tag "/pages/#{@taxon_concept.id}/update_common_names", :method => :put, :class => 'update_common_names' do
  = hidden_field_tag "trusted_name_clicked_on", "false"
  = hidden_field_tag "trusted_synonym_clicked_on", "false"
  = hidden_field_tag "trusted_name_checked", "false"
  = hidden_field_tag 'language_id', names[0].language_id
  = hidden_field_tag "category_id", params[:category_id]
  %table.results_table{ :cellspacing => "0", :summary => "Common Names", :style => "width:100%"}
    %tr
      %th{ :style => "width:7em" }= "Preferred"[]
      %th{ :scope => "col" }= "Name"[]
      %th{ :scope => "col" }= "Sources"[]
      %th{ :style => "width:6em" }= "Curation"[]
    - names.each do |name|
      - column_class = "odd"
      - column_class += ' trusted' if name.trusted?
      - column_class += ' untrusted' if name.untrusted?
      - column_class += ' unreviewed' if name.unreviewed?
      %tr
        %td{ :class => "#{column_class} preferred_name_selector", :style => "text-align:center;" }
          = radio_button_tag 'preferred_name_id', name.id, name.preferred
          = hidden_field_tag "synonym_ids_#{name.id}", name.synonym_ids
          = hidden_field_tag "agent_#{name.id}", name.agent_names
        %td{ :class => column_class }
          = h name.string
        %td{ :class => column_class }
          - if name.sources.blank?
            = "Multiple sources."[]
          - else
            = citables_to_string(name.sources.map{|a| a.citable})
        %td{ :class => "#{column_class} vet_common_name", :style => "text-align:center;" }
          - if name.added_by_user?(current_user)
            = link_to("DELETE"[], url_for(:controller => 'taxa', :action => 'delete_common_name', :category_id => @category_id, :taxon_concept_id => @taxon_concept.id, :synonym_ids => name.synonym_ids), :onclick => "javascript:if(!confirm('#{"Are you sure?"[]}')) { return false; }")
          - else
            = render :partial => 'taxa/content/content_language_common_names_curator_vetting', :locals => {:language_id => name.language_id, :name_id => name.name_id, :vetted_id => name.vetted_id, :unique_id => name.unique_id}
