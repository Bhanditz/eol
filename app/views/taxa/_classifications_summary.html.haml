#classifications_summary.article.classifications
  - count = @browsable_hierarchy_entries.length
  .header
    %h3= I18n.t(:classifications_summary_header_with_count, :count => count)
    - if count > 1
      = link_to(I18n.t(:see_all_classifications_with_count_html, :count => count), taxon_names_path(@taxon_concept))
  - if count > 0
    %ul
      - @browsable_hierarchy_entries.shuffle[0..1].each do |hierarchy_entry|
        %li
          - taxon_rank = hierarchy_entry.rank.blank? ? 'Taxon' : hierarchy_entry.rank.label.firstcap
          = I18n.t(:rank_recognized_by_agent_colon, :rank => taxon_rank, :agent => link_to(hierarchy_entry.hierarchy.agent.full_name, taxon_hierarchy_entry_overview_path(@taxon_concept, hierarchy_entry)))
          = link_to(I18n.t(:show_full_tree), taxon_hierarchy_entry_overview_path(@taxon_concept, hierarchy_entry), :class => 'show_tree', :data_url => taxon_hierarchy_entry_tree_path(@taxon_concept, hierarchy_entry))
          %ul#taxonomictext.classification.summary
            - if hierarchy_entry.has_parent?
              %li
                = render(:partial => 'navigation/node_name_page', :locals => { :hierarchy_entry => hierarchy_entry.parent, :include_common_names => true, :node_class => 'light'})
                %ul.branch
                  = render(:partial => 'taxa/classifications_summary_minitree_node_with_children', :locals => {:hierarchy_entry => hierarchy_entry})
            - else # No ancestor, start with this node:
              = render(:partial => 'taxa/classifications_summary_minitree_node_with_children', :locals => {:hierarchy_entry => hierarchy_entry})
  - else
    .empty
      %p= I18n.t(:classifications_empty)
