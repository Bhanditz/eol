- content_for :social_sharing do
  = render :partial => 'shared/social_sharing'
#taxon
  = render(:partial => 'taxa/media_summary')
  = render(:partial => 'taxa/iucn_status_summary')
  = render(:partial => 'taxa/text_summary')
  = render(:partial => 'taxa/collections_summary')
  = render(:partial => 'taxa/communities_summary')
#sidebar
  - if @selected_hierarchy_entry
    = render(:partial => 'taxa/classification_tree')
  - else
    - if preferred_classification = @taxon_concept.curator_chosen_classification
      #classification_tree.article
        .header
          %h3= I18n.t(:classification_summary_section_header)
        .meta.curated
          %p= I18n.t(:classification_selected_by_curator, :curator => link_to(preferred_classification.user.full_name, user_path(preferred_classification.user_id)))
        #classification_browser.browsable.classifications
          - hierarchy_entry = preferred_classification.hierarchy_entry
          - taxon_rank = hierarchy_entry.rank_label
          - if hierarchy_entry.hierarchy.agent.user && !hierarchy_entry.hierarchy.agent.user.content_partners.blank?
            - agent = link_to(hierarchy_entry.hierarchy.agent.full_name, content_partner_path(hierarchy_entry.hierarchy.agent.user.content_partners.first))
          - elsif hierarchy_entry.hierarchy.resource && hierarchy_entry.hierarchy.resource.content_partner
            - agent = link_to(hierarchy_entry.hierarchy.agent.full_name, content_partner_path(hierarchy_entry.hierarchy.resource.content_partner))
          - else
            - agent = hierarchy_entry.hierarchy.agent.full_name
          %h4= I18n.t(:rank_recognized_by_agent_colon, :rank => taxon_rank, :agent => agent)
          %ul
            = render(:partial => 'taxa/trees/show', :locals => {:in_hierarchy => true, :hierarchy_entry => hierarchy_entry, :link_to_taxa => true, :show_siblings => true})
    - else
      = render(:partial => 'taxa/classifications_summary')
  = render(:partial => 'taxa/curators_summary', :locals => {:curators => @taxon_concept.data_object_curators})
  - unless @selected_hierarchy_entry
    .article.list.updates
      - log = @taxon_concept.activity_log(:per_page => 5)
      .header
        %h3= I18n.t(:recent_updates)
        - if log.total_entries > 0
          = link_to(I18n.t(:see_all_updates_with_count_html, :count => log.total_entries), taxon_updates_path(@taxon_concept))
      = render(:partial => 'activity_logs/index', :locals => {:log => log, :hide_pagination => true, :truncate_comments => true })
      = render(:partial => 'comments/new', :locals => { :parent => @taxon_concept })
