<% unless @content.nil?
  # depending on which content type we are displaying, load a different partial
  case @content[:content_type]

    when "text"
      %>
      <%= render(:partial=>'content_text') %>
      <div id="scroll_to_bottom"></div>
      <script type="text/javascript">
        womAdd('updateReferences();');
      </script>
      <%
    when "links"
      %>
         <%= render(:partial=>'content_links') %>
      <%
    when "common names"
      %>
         <%= render(:partial=>'content_names') %>
      <%
    when "synonyms"
      %>
         <%= render(:partial=>'content_synonyms') %>
      <%
    when "ubio_links"
      %>
         <%= render(:partial=>'content_other_projects') %>
      <%
    when "bhl"
      %>
         <%= render(:partial=>'content_bhl') %>
      <%
  end
end%>