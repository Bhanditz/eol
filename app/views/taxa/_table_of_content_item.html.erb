<% item_class=item.is_child? ? 'li-sub' : '' %>
<li class="<%=item_class%>">
  <% if item.has_content? %>
    <%  if logged_in? && item.allow_user_text? %>
      <div class="add_text_button">
        <%#= link_to("<span style='width:20px;height:20px;display:block;'></span>", { :controller => 'data_objects', :action => 'new', :params => { :my_taxon_id => @taxon_id, :current_category_id => item.id }} ) -%>
        <%= link_to("<span style='width:20px;height:20px;display:block;'></span>", {:controller => :data_objects, :action => :new, :type => :text, :toc_id => item.id, :taxon_id => @taxon_id}, :id => "add_text_#{item.id}" ) -%>
      </div>
    <% end %>
 	  <a href="<%= url_for :action=>'show',:id=>@taxon_id, :category_id => item.id %>" onclick="eol_update_content_area(<%=@taxon_id%>,<%=item.id%>);this.className = 'active toc_item';return false;" class="toc_item <%= [@category_id, @item].include?(item.id) ? "active" : nil %>" title="<%= item.label %>">
  <% else %>
    <span class="no_toc_link">
  <% end %>

  <span>
    <ul>
      <li class="unpublished_icon status_icon"<%=' style="display:none;"' unless item.has_unpublished_content%> title="Unpublished" ></li>
      <li class="published_icon status_icon"<%=' style="display:none;"' unless item.has_published_content %> title="Published" ></li>
      <li class="inappropriate_icon status_icon"<%=' style="display:none;"' unless item.has_inappropriate_content %> title="Inappropriate" ></li>
      <li class="invisible_icon status_icon"<%=' style="display:none;"' unless item.has_invisible_content %> title="Hidden" ></li>
    </ul>
  </span>

  <%= item.label %>

	<% if item.has_content? %>
	  </a>
	<% else %>
    </span>
	<% end %>
</li>
