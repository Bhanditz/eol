#tabs_sidebar
  %ul.tabs
    %li{:class => resource_is_active('taxa/updates', 'show')}
      = link_to I18n.t(:update_feed),
        @hierarchy_entry ? taxon_hierarchy_entry_updates_path(@taxon_concept, @selected_hierarchy_entry) : taxon_updates_path(@taxon_concept)
    %li{:class => resource_is_active('taxa/updates', 'statistics')}
      = link_to I18n.t(:page_statistics),
        @hierarchy_entry ? statistics_taxon_hierarchy_entry_literature_path(@taxon_concept, @selected_hierarchy_entry) : statistics_taxon_updates_path(@taxon_concept)
