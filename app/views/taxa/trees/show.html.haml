= javascript_include_tag 'navigation.js' # TODO - this should probably be done merged.

- entry_kingdom = @hierarchy_entry.kingdom

#taxonomic-text-container
  %ul#taxonomictext.classification
    - if ancestors = @hierarchy_entry.ancestors(:include_common_names => @include_common_names, :common_name_language => current_user.language)
      - hierarchy_entry = ancestors.pop
      = render(:partial => 'navigation/node_with_ancestry_page', :locals => { :ancestors => ancestors, :hierarchy_entry => hierarchy_entry })
    - else
      %li
        = render(:partial => 'navigation/node_name_page', :locals => { :hierarchy_entry => @hierarchy_entry, :node_class => 'bold' })
