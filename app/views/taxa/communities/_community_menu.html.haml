#tabs_sidebar
  %ul.tabs
    %li{:class => resource_is_active('taxa/communities', 'index')}
      - if @selected_hierarchy_entry
        = link_to I18n.t(:communities_link), taxon_entry_communities_path(@taxon_concept)
      - else
        = link_to I18n.t(:communities_link), taxon_community_index_path(@taxon_concept)
    %li{:class => resource_is_active('taxa/communities', 'collections')}
      - if @selected_hierarchy_entry
        = link_to I18n.t(:collections_link), collections_taxon_entry_communities_path(@taxon_concept)
      - else
        = link_to I18n.t(:collections_link), collections_taxon_communities_path(@taxon_concept)
    %li{:class => resource_is_active('taxa/communities', 'curators')}
      - if @selected_hierarchy_entry
        = link_to I18n.t(:curators), curators_taxon_entry_communities_path(@taxon_concept)
      - else
        = link_to I18n.t(:curators), curators_taxon_communities_path(@taxon_concept)
