- if @results.blank?
  .empty
    %p= @querystring ? I18n.t(:no_results_for_search_term, :search_term => @querystring) : I18n.t(:must_provide_search_term_error)
- else
  - previous_label = (@results.current_page == 1) ? '' : I18n.t(:pagination_previous_with_count, :count => @results.per_page)
  - next_label = (@results.current_page == @results.total_pages) ? '' : I18n.t(:pagination_next_with_count, :count => @results.per_page)
  .header
    - start_number = (@results.current_page - 1) * @results.per_page + 1
    - end_number = [ (start_number + @results.per_page - 1), @results.total_entries ].min
    %h3= raw(I18n.t(:displaying_numerical_range, :start_number => start_number, :end_number => end_number, :total => @results.total_entries))
    = will_paginate @results, |
      :previous_label => previous_label, |
      :next_label => next_label, |
      :page_links=>false
  %ul.object_list
    - @results.each do |r|
      %li.taxon
        = render :partial => "shared/item_summary_taxon_data_search", :locals => { :item => r[:taxon_concept], :result_row => r  }
