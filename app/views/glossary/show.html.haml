- cache('glossary_in_lang_' + current_language.iso_code, :expires_in => 10.minutes) do
  #content
    #known_uris.site_column.glossary
      - a_to_z = ('A'..'Z').to_a
      - a_to_zero = a_to_z + [ '0' ]
      %h3
        = raw a_to_zero.collect{ |letter| link_to(letter == '0' ? '#' : letter, '#' + letter) }.join("&nbsp;&nbsp;")
      - a_to_zero.each do |letter|
        %a{ name: letter }
        .chapter_marker
          %h3= letter == '0' ? '#' : letter
        %ul.glossary
          - uris_for_this_chapter = @known_uris.select{ |ku| letter == '0' ? ( ! a_to_z.include?(ku.name.firstcap[0])) : ku.name.firstcap[0] == letter }
          - uris_for_this_chapter.sort_by { |ku| ku.name }.each do |ku|
            = render(partial: 'known_uris/definition', locals: { known_uri: ku, show_top_link: true, include_attribution: true, include_search_link: true })
