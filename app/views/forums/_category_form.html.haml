= form_for ForumCategory.new, :builder => ApplicationHelper::EolFormBuilder, :html => { :class => 'boxed' } do |f|
  %h3= "Create a Category"
  %fieldset
    %dl
      %dt
        = f.label :title
      %dd
        = f.text_field :title, :size => 50
      %dt
        = f.label :description, raw(t('activerecord.attributes.forum.description'))
      %dd
        = f.text_area :description, :rows => 5, :cols => 40
  %fieldset.actions
    = submit_tag(I18n.t('forums.create_category'))