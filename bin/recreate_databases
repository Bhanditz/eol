#!/bin/sh
echo "== Dropping development databases"
rake eol:db:drop:all RAILS_ENV=development
echo "== Dropping test databases"
rake eol:db:drop:all RAILS_ENV=test
echo "== Creating development databases"
rake eol:db:create:all RAILS_ENV=development
echo "== Creating test databases"
rake eol:db:create:all RAILS_ENV=test

echo "== Creating development tables"
rake db:migrate --trace
echo "== Creating development fixtures"
rake scenarios:load NAME=foundation,bootstrap RAILS_ENV=development

echo "== Creating test tables"
rake db:migrate RAILS_ENV=test 
echo "== Creating test fixtures"
rake scenarios:load NAME=foundation,bootstrap RAILS_ENV=test
